@model ContractMonthlyClaimSystem.Controllers.HRDashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary">HR Dashboard</h1>
            <p class="lead">Contract Monthly Claim System - Human Resources</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalClaims</h4>
                            <p>Total Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.PendingClaims</h4>
                            <p>Pending Approval</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ApprovedClaims</h4>
                            <p>Approved Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>ZAR @Model.TotalAmount.ToString("N2")</h4>
                            <p>Total Payable</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Claims Processing</h5>
                </div>
                <div class="card-body">
                    <p>Manage claims ready for payment processing.</p>
                    <a asp-action="ClaimsForPayment" class="btn btn-primary w-100">
                        <i class="fas fa-money-check"></i> Process Payments
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Reports & Analytics</h5>
                </div>
                <div class="card-body">
                    <p>Generate financial reports and analytics.</p>
                    <a asp-action="Reports" class="btn btn-success w-100">
                        <i class="fas fa-chart-bar"></i> Generate Reports
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Lecturer Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage lecturer information and contracts.</p>
                    <a asp-action="LecturerManagement" class="btn btn-info w-100">
                        <i class="fas fa-users"></i> Manage Lecturers
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
