@using ContractMonthlyClaimSystem.Models
@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims for Approval";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">Pending Claims</h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to My Claims
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-check-circle display-1 text-success"></i>
                    <h3 class="text-success mt-3">No Pending Claims</h3>
                    <p class="text-muted">All claims have been processed.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var claim in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Claim #@claim.ClaimId</h5>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">@claim.Status</span>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-3">
                                        <dt class="col-sm-5">Lecturer:</dt>
                                        <dd class="col-sm-7">@claim.LecturerName</dd>

                                        <dt class="col-sm-5">Month:</dt>
                                        <dd class="col-sm-7">@claim.MonthYear.ToString("MMMM yyyy")</dd>

                                        <dt class="col-sm-5">Hours/Rate:</dt>
                                        <dd class="col-sm-7">@claim.HoursWorked hours × ZAR @claim.HourlyRate</dd>

                                        <dt class="col-sm-5">Total Amount:</dt>
                                        <dd class="col-sm-7"><strong>ZAR @claim.TotalAmount.ToString("N2")</strong></dd>

                                        <dt class="col-sm-5">Submitted:</dt>
                                        <dd class="col-sm-7">@claim.SubmissionDate.ToString("dd MMM yyyy HH:mm")</dd>

                                        @if (!string.IsNullOrEmpty(claim.Notes))
                                        {
                                            <dt class="col-sm-5">Notes:</dt>
                                            <dd class="col-sm-7">@claim.Notes</dd>
                                        }
                                    </dl>

                                    <!-- Approval Actions -->
                                    <div class="approval-actions">
                                        @if (claim.Status == ClaimStatus.Submitted)
                                        {
                                            <form asp-action="ApproveByCoordinator" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check"></i> Approve as Coordinator
                                                </button>
                                            </form>

                                            <button type="button" class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal@(claim.ClaimId)">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        }
                                        else if (claim.Status == ClaimStatus.ApprovedByCoordinator)
                                        {
                                            <form asp-action="ApproveByManager" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check"></i> Approve as Manager
                                                </button>
                                            </form>

                                            <button type="button" class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal@(claim.ClaimId)">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Reject Modal -->
                            <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Claim #@claim.ClaimId</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="RejectClaim" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                                <div class="form-group">
                                                    <label for="rejectionReason@(claim.ClaimId)">Rejection Reason:</label>
                                                    <textarea name="rejectionReason" class="form-control"
                                                      id="rejectionReason@(claim.ClaimId)"
                                                      rows="3" required
                                                      placeholder="Please provide a reason for rejection..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Claim</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Submitted => "bg-warning text-dark",
            ClaimStatus.ApprovedByCoordinator => "bg-info",
            ClaimStatus.ApprovedByManager => "bg-primary",
            ClaimStatus.Paid => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}