@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Review Policy Issues";
    var policyIssues = ViewBag.PolicyIssues as List<string> ?? new List<string>();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Policy Compliance Review</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-shield-alt"></i> Policy Issues Detected</h5>
                        <p>The following policy issues were found with this claim:</p>
                        <ul>
                            @foreach (var issue in policyIssues)
                            {
                                <li>@issue</li>
                            }
                        </ul>
                    </div>

                    <!-- Claim Summary -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Claim Summary</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Lecturer:</dt>
                                <dd class="col-sm-8">@Model.LecturerName</dd>

                                <dt class="col-sm-4">Month:</dt>
                                <dd class="col-sm-8">@Model.MonthYear.ToString("MMMM yyyy")</dd>

                                <dt class="col-sm-4">Hours/Rate:</dt>
                                <dd class="col-sm-8">@Model.HoursWorked hours × ZAR @Model.HourlyRate</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8"><strong>ZAR @Model.TotalAmount.ToString("N2")</strong></dd>

                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <dt class="col-sm-4">Notes:</dt>
                                    <dd class="col-sm-8">@Model.Notes</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="ApproveByCoordinator" method="post">
                                <input type="hidden" name="id" value="@Model.ClaimId" />
                                <input type="hidden" name="overridePolicy" value="true" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-check-circle"></i> Approve with Override
                                </button>
                                <small class="text-muted">Approve despite policy issues</small>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("PendingClaims")" class="btn btn-outline-secondary w-100 mb-2">
                                <i class="fas fa-arrow-left"></i> Back to Pending Claims
                            </a>
                            <small class="text-muted">Review other claims first</small>
                        </div>
                    </div>

                    <!-- Policy Information -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6><i class="fas fa-info-circle"></i> Policy Guidelines</h6>
                        <ul class="small">
                            <li><strong>Standard Hours:</strong> Up to 120 hours per month</li>
                            <li><strong>Maximum Hours:</strong> 160 hours per month (requires override)</li>
                            <li><strong>Standard Rate:</strong> ZAR 450-650 per hour</li>
                            <li><strong>Maximum Rate:</strong> ZAR 800 per hour (requires override)</li>
                            <li><strong>Exceptional Amount:</strong> Claims over ZAR 100,000 require special review</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>