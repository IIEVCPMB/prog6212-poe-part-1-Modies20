@using ContractMonthlyClaimSystem.Models
@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-sm">
                <div class="card-body py-5">
                    <i class="fas fa-exclamation-triangle display-1 text-danger mb-4"></i>

                    <h1 class="display-4 text-danger">Oops!</h1>

                    <h2 class="text-muted mb-4">Something went wrong.</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mb-4">
                            <strong>Error Details:</strong> @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="mb-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <p class="text-muted mb-3">
                            We're sorry for the inconvenience. Please try again or contact support if the problem persists.
                        </p>

                        <div class="d-flex justify-content-center gap-3">
                            <a href="javascript:history.back()" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Go Back
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home"></i> Home Page
                            </a>
                            <a asp-controller="Claim" asp-action="Index" class="btn btn-success">
                                <i class="fas fa-list"></i> My Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>